{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<a href="{{ path('library_show_all') }}">Show all books</a>
<h1> {{ book.getTitle }} </h1>
    <table>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Author</th>
        </tr>
        <tr>
            <td> {{ book.getTitle|e }} </td>
            <td> {{ book.getIsbn|e }} </td>
            <td> {{ book.getAuthor|e }} </td>
        </tr>
    </table>

    <form method="get" action="">
        <input type="submit" name="do_it" value="Update book"
        onClick="this.form.action='{{ path('library_update_get', {id: book.getId}) }}';">
    </form>
    <form method="post" action="">
        <input type="submit" name="do_it" value="Delete book"
        onClick="this.form.action='{{ path('library_delete_by_id', {id: book.getId}) }}';">
    </form>
</div>

{% endblock %}
