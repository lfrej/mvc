{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('library') }}">Back to library</a>
    <h1>Show all books in library! ðŸ“š</h1>
        <table>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Author</th>
            </tr>
            {% for book in books %}
                <tr>
                    <td> {{ book.getTitle|e }}</td>
                    <td> {{ book.getIsbn|e }} </td>
                    <td> {{ book.getAuthor|e }} </td>
                    <td> <a href="{{ path('library_show_by_id', {id: book.getId}) }}" class="button">Show</a></td>
                </tr>
            {% endfor %}
        </table>

        <a href="{{ path('library_create_get')}}" class="button"> Add new book library</a>
</div>

{% endblock %}
